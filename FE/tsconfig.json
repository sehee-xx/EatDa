{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["react-native", "expo"]
  },
  "include": ["**/*.ts", "**/*.tsx", "declarations.d.ts"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
